<% if @store.errors.any? %>
    <div id="error_explanation">
        <div class = "alert alert-danger">
            The form contains <%= pluralize(@store.errors.count, "error")%>.
        </div>
        <ul>
            <% @store.errors.full_messages.each do |msg|%>
                <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
<% end %>