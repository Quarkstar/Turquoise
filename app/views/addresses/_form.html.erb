<div class = "row">
  <div class = "col-md-6 col-md-offset-3">
    <%= form_for(@address, url:user_addresses_path(current_user)) do |form|%>
      <%= render 'shared/error_messages', object: @address%>
  
      <%= form.label :content %>
      <%= form.text_area :content, class: 'form-control'%>

      <%= form.label :tel %>
      <%= form.text_field :tel, class: 'form-control'%>
 
      <%= form.submit yield(:btn_text), class:"btn btn-primary" %>
      <% end %>
  </div>
</div>
