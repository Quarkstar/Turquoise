<li id="cart-<%= cart.id %>">
    <%#= link_to gravatar_for(store.user, size: 50), store.user %>

<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title"> <%= link_to cart.product.name, cart.product%> </h3>
    </div>

    <div class="panel-body">
    <span class="content"> num: <%= cart.num%> </span>
    <span class="content"> 
        <% if cart.original_price > cart.product.price%> 
        <span class="label label-success"><%= cart.original_price - cart.product.price%> off </span>
        <%end%>
    </span>
    <span class="timestamp">
        Added <%= time_ago_in_words(cart.created_at) %> ago.
    </span>
    
    </div>
</div>
    <%= link_to "Remove", product_cart_path(cart), class:"btn btn-danger",
        method: :delete, data: { confirm: 'Are you sure?' }%>
    
</li>